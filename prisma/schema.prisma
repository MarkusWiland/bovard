// ===============================
// GENERATOR & DATASOURCE
// ===============================

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===============================
// ENUMS
// ===============================
enum Role {
  OWNER
  ADMIN
  MEMBER
}

enum PaymentStatus {
  PAID
  LATE
  PENDING
}

enum ContractStatus {
  DRAFT
  ACTIVE
  TERMINATED
  EXPIRED
}

enum UnitType {
  APARTMENT
  OFFICE
  STORAGE
  PARKING
}

enum UnitStatus {
  VACANT // Ledig
  OCCUPIED // Aktivt avtal
  MAINTENANCE // UnderhÃ¥ll
}

// ===============================
// AUTH MODELS (BETTER AUTH)
// ===============================

model User {
  id            String   @id
  name          String
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime

  sessions    Session[]
  accounts    Account[]
  memberships Membership[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@index([identifier])
  @@map("verification")
}

// ===============================
// ORGANISATION & RBAC
// ===============================

model Organization {
  id               String    @id @default(cuid())
  name             String
  stripeCustomerId String?
  plan             String    @default("FREE")
  trialEndsAt      DateTime?

  memberships Membership[]
  properties  Property[]

  createdAt DateTime @default(now())
}

model Membership {
  id             String   @id @default(cuid())
  role           Role
  userId         String
  organizationId String
  createdAt      DateTime @default(now())

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
}

// ===============================
// FASTIGHETER
// ===============================

model Property {
  id         String @id @default(cuid())
  name       String
  street     String
  city       String
  postalCode String
  country    String @default("SE")

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  units Unit[]

  createdAt DateTime @default(now())
}

// ===============================
// ENHETER (LÃ„GENHETER / LOKALER)
// ===============================

model Unit {
  id String @id @default(cuid())

  // ðŸ”¹ Identifiering
  label   String // "12A", "LGH 1002"
  type    UnitType // APARTMENT, OFFICE, STORAGE
  rooms   Int // 2 (2 rum)
  sizeSqm Int // 62 (kvm)

  // ðŸ”¹ Ekonomi
  rent     Int // mÃ¥nadsavgift i kr
  deposit  Int? // valfritt
  currency String @default("SEK")

  // ðŸ”¹ Status
  status UnitStatus @default(VACANT)

  // ðŸ”¹ Relationer
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  contracts Contract[]
  payments  Payment[]

  // ðŸ”¹ Meta / UI
  floor     Int?
  note      String?
  tenantId  String?
  tenant    Tenant?  @relation(fields: [tenantId], references: [id], onDelete: SetNull)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([propertyId, label])
}

model Contract {
  id String @id @default(cuid())

  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  unitId String
  unit   Unit   @relation(fields: [unitId], references: [id], onDelete: Cascade)

  templateId String
  template   Template @relation(fields: [templateId], references: [id])

  status    ContractStatus @default(DRAFT)
  startDate DateTime
  endDate   DateTime?

  // Snapshot av ifyllda vÃ¤rden
  data Json

  documents Document[]

  createdAt DateTime @default(now())

  @@index([tenantId])
  @@index([unitId])
}

// ===============================
// HYRESGÃ„ST
// ===============================
model Template {
  id          String  @id @default(cuid())
  name        String
  description String?
  isDefault   Boolean @default(false)
  isActive    Boolean @default(true)

  variables TemplateVariable[]
  contracts Contract[]

  createdAt DateTime @default(now())
}

model TemplateVariable {
  id         String   @id @default(cuid())
  templateId String
  template   Template @relation(fields: [templateId], references: [id], onDelete: Cascade)

  name        String
  label       String
  type        String
  required    Boolean @default(false)
  description String?
  sortOrder   Int

  @@unique([templateId, name])
}

model Tenant {
  id             String   @id @default(cuid())
  name           String
  email          String
  phone          String
  personalNumber String
  moveInDate     DateTime

  contracts Contract[]

  createdAt DateTime @default(now())
  units     Unit[]
}

// ===============================
// BETALNINGAR
// ===============================

model Payment {
  id       String        @id @default(cuid())
  month    String
  dueDate  DateTime
  paidDate DateTime?
  amount   Int
  status   PaymentStatus

  unitId String
  unit   Unit   @relation(fields: [unitId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

// ===============================
// DOKUMENT
// ===============================

model Document {
  id         String   @id @default(cuid())
  name       String
  type       String
  uploadedAt DateTime @default(now())

  contractId String
  contract   Contract @relation(fields: [contractId], references: [id], onDelete: Cascade)
}
