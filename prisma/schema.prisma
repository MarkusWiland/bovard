// ===============================
// GENERATOR & DATASOURCE
// ===============================

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===============================
// ENUMS
// ===============================

enum Role {
  OWNER
  ADMIN
  MEMBER
}

enum PaymentStatus {
  PAID
  LATE
  PENDING
}

enum UnitStatus {
  OCCUPIED
  VACANT
}

// ===============================
// AUTH MODELS (BETTER AUTH)
// ===============================

model User {
  id            String   @id
  name          String
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime

  sessions    Session[]
  accounts    Account[]
  memberships Membership[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@index([identifier])
  @@map("verification")
}

// ===============================
// ORGANISATION & RBAC
// ===============================

model Organization {
  id               String    @id @default(cuid())
  name             String
  stripeCustomerId String?
  plan             String    @default("FREE")
  trialEndsAt      DateTime?

  memberships Membership[]
  properties  Property[]
}

model Membership {
  id             String   @id @default(cuid())
  role           Role
  userId         String
  organizationId String
  createdAt      DateTime @default(now())

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
}

// ===============================
// FASTIGHETER
// ===============================

model Property {
  id         String @id @default(cuid())
  name       String // "Vasagatan 12"
  street     String
  city       String
  postalCode String
  country    String @default("SE")

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  units Unit[]

  createdAt DateTime @default(now())
}

// ===============================
// ENHETER (LÄGENHETER / LOKALER)
// ===============================

model Unit {
  id      String     @id @default(cuid())
  label   String // "12A"
  type    String // "2 rum och kök"
  size    String // "62 kvm"
  rent    Int
  deposit Int
  status  UnitStatus @default(OCCUPIED)

  contractStart DateTime
  contractEnd   DateTime

  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  tenant    Tenant?
  payments  Payment[]
  documents Document[]

  createdAt DateTime @default(now())

  @@unique([propertyId, label])
}

// ===============================
// HYRESGÄST
// ===============================

model Tenant {
  id             String   @id @default(cuid())
  name           String
  email          String
  phone          String
  personalNumber String
  moveInDate     DateTime

  unitId String @unique
  unit   Unit   @relation(fields: [unitId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

// ===============================
// BETALNINGAR
// ===============================

model Payment {
  id       String        @id @default(cuid())
  month    String // "Januari 2026"
  dueDate  DateTime
  paidDate DateTime?
  amount   Int
  status   PaymentStatus

  unitId String
  unit   Unit   @relation(fields: [unitId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

// ===============================
// DOKUMENT
// ===============================

model Document {
  id         String   @id @default(cuid())
  name       String
  type       String // "Kontrakt", "Kvitto"
  uploadedAt DateTime @default(now())

  unitId String
  unit   Unit   @relation(fields: [unitId], references: [id], onDelete: Cascade)
}
